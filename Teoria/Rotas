# ðŸš€ Estudo de Rotas com Express

import express from 'express'

const app = express()

// MÃ©todos HTTP (CRUD)
// - CREATE â†’ POST (criar uma informaÃ§Ã£o)
// - READ â†’ GET (buscar uma informaÃ§Ã£o)
// - UPDATE â†’ PUT ou PATCH
//     PUT â†’ altera toda a informaÃ§Ã£o
//     PATCH â†’ altera parte da informaÃ§Ã£o
// - DELETE â†’ DELETE (apagar uma informaÃ§Ã£o)

// Estrutura de uma rota:
// app.METODO('/rota', (req, res) => { ... })

// Exemplo simples GET
app.get('/', (req, res) => {
  res.send('Hello World')
})

// Exemplo completo com todas as rotas CRUD
app.get('/users', (req, res) => {
  res.send('Listando usuÃ¡rios')
})

app.post('/users', (req, res) => {
  res.send('UsuÃ¡rio criado')
})

app.put('/users/:id', (req, res) => {
  res.send(`UsuÃ¡rio ${req.params.id} atualizado (PUT)`)
})

app.patch('/users/:id', (req, res) => {
  res.send(`UsuÃ¡rio ${req.params.id} atualizado (PATCH)`)
})

app.delete('/users/:id', (req, res) => {
  res.send(`UsuÃ¡rio ${req.params.id} removido`)
})

// Iniciando o servidor
app.listen(3000, () => {
  console.log('Servidor rodando na porta 3000 ðŸš€')
})
